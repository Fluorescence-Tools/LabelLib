///
/// @file    FlexLabel/Version.h
/// @brief   Report the version for this package.
///

#ifndef LABELLIB_VERSION_H
#define LABELLIB_VERSION_H

#include <string>
#include <sstream>

/// The current major version.
#define FLEXLABEL_VERSION_MAJOR @VERSION_MAJOR@

/// The current minor version.
#define FLEXLABEL_VERSION_MINOR @VERSION_MINOR@

/// The current patch level.
#define FLEXLABEL_VERSION_PATCH @VERSION_PATCH@

/// The current svn revision.
#define FLEXLABEL_VCS_REVISION "@VCS_REVISION@"

/// True if the current version is newer than the given one.
#define FLEXLABEL_VERSION_GT(MAJOR, MINOR, PATCH) \
  ((FLEXLABEL_VERSION_MAJOR > MAJOR) ||           \
   (FLEXLABEL_VERSION_MAJOR ==                    \
    MAJOR&&(FLEXLABEL_VERSION_MINOR > MINOR || (FLEXLABEL_VERSION_MINOR == MINOR&& FLEXLABEL_VERSION_PATCH > PATCH))))

/// True if the current version is equal or newer to the given.
#define FLEXLABEL_VERSION_GE(MAJOR, MINOR, PATCH) \
  ((FLEXLABEL_VERSION_MAJOR > MAJOR) ||           \
   (FLEXLABEL_VERSION_MAJOR ==                    \
    MAJOR&&(FLEXLABEL_VERSION_MINOR > MINOR || (FLEXLABEL_VERSION_MINOR == MINOR&& FLEXLABEL_VERSION_PATCH >= PATCH))))

/// True if the current version is older than the given one.
#define FLEXLABEL_VERSION_LT(MAJOR, MINOR, PATCH) \
  ((FLEXLABEL_VERSION_MAJOR < MAJOR) ||           \
   (FLEXLABEL_VERSION_MAJOR ==                    \
    MAJOR&&(FLEXLABEL_VERSION_MINOR < MINOR || (FLEXLABEL_VERSION_MINOR == MINOR&& FLEXLABEL_VERSION_PATCH < PATCH))))

/// True if the current version is older or equal to the given.
#define FLEXLABEL_VERSION_LE(MAJOR, MINOR, PATCH) \
  ((FLEXLABEL_VERSION_MAJOR < MAJOR) ||           \
   (FLEXLABEL_VERSION_MAJOR ==                    \
    MAJOR&&(FLEXLABEL_VERSION_MINOR < MINOR || (FLEXLABEL_VERSION_MINOR == MINOR&& FLEXLABEL_VERSION_PATCH <= PATCH))))

/// Information about the current version.
class Version {
public:
  /// @return the current major version of.
  static int getMajor()
  {
    return FLEXLABEL_VERSION_MAJOR;
  }

  /// @return the current minor version of.
  static int getMinor()
  {
    return FLEXLABEL_VERSION_MINOR;
  }

  /// @return the current patch level of.
  static int getPatch()
  {
    return FLEXLABEL_VERSION_PATCH;
  }

  /// @return the current version (MM.mm.pp).
  static std::string getString()
  {
    std::ostringstream version;
    version << FLEXLABEL_VERSION_MAJOR << '.' << FLEXLABEL_VERSION_MINOR << '.' << FLEXLABEL_VERSION_PATCH;
    return version.str();
  }

  /// @return the SVN revision.
  static std::string getRevision()
  {
    return FLEXLABEL_VCS_REVISION;
  }

  /// @return the current version plus the SVN revision (MM.mm.pp.rev).
  static std::string getRevString()
  {
    std::ostringstream version;
    version << getString() << '.' << FLEXLABEL_VCS_REVISION;
    return version.str();
  }
};
}
}

#endif // LABELLIB_VERSION_H
